{
  "compilerOptions": {
    "target": "ES2020",                   // Use modern JavaScript features
    "module": "commonjs",                  // For Node.js module system
    "moduleResolution": "node",            // Resolve modules like Node.js does
    "esModuleInterop": true,               // Ensure compatibility with CommonJS and ES modules
    "allowSyntheticDefaultImports": true,  // Allow default imports even if module doesn't export a default
    "strict": true,                        // Enable strict type-checking
    "skipLibCheck": true,                  // Skip type definition checks for libraries
    "forceConsistentCasingInFileNames": true, // Ensure case consistency in file names
    "outDir": "./dist",                    // Where the compiled JS will go
    "baseUrl": ".",                        // Base URL for module resolution
    "resolveJsonModule": true,             // Allow importing JSON modules
    "typeRoots": ["./node_modules/@types"], // Where type definitions are found
    "paths": {
      "*": ["node_modules/*"]              // Resolve paths using `node_modules`
    }
  },
  "include": [
    "api/**/*.ts"                          // Include only TypeScript files from the `api` folder
  ],
  "exclude": [
    "node_modules",                        // Exclude `node_modules` from compilation
    "dist"                                 // Exclude the output directory from compilation
  ]
}
